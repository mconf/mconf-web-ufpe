/var/www/mconf-web/current/log/production.log {
         size 50M
         copytruncate
         rotate 10
         compress
         missingok
         notifempty
         su mconf www-data
}

/var/www/mconf-web/current/log/resque_*.log {
         size 50M
         copytruncate
         rotate 10
         compress
         missingok
         notifempty
         su mconf www-data
}
